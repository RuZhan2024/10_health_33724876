<%- include('./partials/header', { pageTitle: 'Login' }) %>

<h2>Search Workouts</h2>

<form action="/search/results" method="get" class="form form-inline">
  <label>
    Keyword
    <input type="text" name="q" value="<%= values.q || '' %>" placeholder="type or notes">
  </label>

  <label>
    From
    <input type="date" name="date_from" value="<%= values.date_from || '' %>">
  </label>

  <label>
    To
    <input type="date" name="date_to" value="<%= values.date_to || '' %>">
  </label>

  <label>
    Min duration
    <input type="number" name="min_duration" min="0" value="<%= values.min_duration || '' %>">
  </label>

  <button type="submit" class="btn">Search</button>
</form>
<%- include('./partials/footer') %>

