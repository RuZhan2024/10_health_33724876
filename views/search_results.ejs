<%- include('./partials/header', { pageTitle: 'Login' }) %>

<h2>Search Results</h2>

<p>Found <strong><%= count %></strong> workouts.</p>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Duration (min)</th>
      <th>Intensity</th>
      <th>Calories</th>
    </tr>
  </thead>
  <tbody>
    <% if (!workouts.length) { %>
      <tr><td colspan="5">No results.</td></tr>
    <% } else { %>
      <% workouts.forEach(w => { %>
        <tr>
          <td><%= w.date.toISOString().slice(0, 10) %></td>
          <td><%= w.type %></td>
          <td><%= w.duration_min %></td>
          <td><%= w.intensity %></td>
          <td><%= w.calories || '-' %></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<p><a href="/search">Back to search</a></p>

<%- include('./partials/footer') %>