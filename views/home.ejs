<%- include('./partials/header', { pageTitle: pageTitle }) %>

<section class="home">
  <h2>Welcome to the Health App</h2>

  <% if (!currentUser) { %>
    <p>
      Track your workouts and health metrics in one place.
      Please <a href="/auth/register">create an account</a> or
      <a href="/auth/login">log in</a> to get started.
    </p>
  <% } else { %>
    <p>Hello, <strong><%= currentUser.username %></strong>!</p>
    <p>
      Go to your <a href="/dashboard">Dashboard</a> to see your recent activity,
      or log a new <a href="/workouts">workout</a> or
      <a href="/metrics">health metric</a>.
    </p>
  <% } %>
</section>

<%- include('./partials/footer') %>
